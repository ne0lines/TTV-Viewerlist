:root {
    --prim: #26ED90;
}

html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
}

* {
    box-sizing: border-box;
}

body {
    margin: 0;
    font-family: Roboto, sans-serif;
    text-align: center;
    background-color: black;
    color: white;
}

h1, h2, h4, p {
    margin: 0;
}

.setup {
    margin: auto;
    border: 2px solid white;
    width: max-content;
    padding: 2rem;
}

.count {
    font-size: 2rem;
    border: 2px solid black;
}

#small {
    font-size: .75rem;
}

.viewer, .special {
    margin: 2rem 0 0 0;
}

.box {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    background-color: black;
    text-align: center;
}

.box span {
    padding: .5rem;
}

input[type="text"] {
    color: white;
    background: none;
    font-size: 1.15rem;
    margin: 1rem auto;
    text-align: center;
    border: .15rem solid white;
    padding: .5rem;
    outline: none;
    transition: 250ms;
}

.box textarea {
    color: white;
    background: none;
    font-size: 1.5rem;
    margin: auto;
    border: .15rem solid white;
    padding: 1rem;
    outline: none;
    transition: 250ms;
}

button {
    margin: 1.2rem 0 0 0;
    color: white;
    background: none;
    text-align: center;
    border: .15rem solid var(--prim);
    padding: .75rem 2.5rem;
    outline: none;
    transition: 250ms;
    cursor: pointer;
}

button:hover {
    background: white;
    color: black;
    border: .15rem solid white;
}